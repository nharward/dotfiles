# Sound
"/usr/bin/pamixer -i 3"
    XF86AudioRaiseVolume
"/usr/bin/pamixer -d 3"
    XF86AudioLowerVolume
"/usr/bin/pamixer -t"
    XF86AudioMute

# Backlight
"/usr/bin/xbacklight -inc 10%"
    XF86MonBrightnessUp
"/usr/bin/xbacklight -dec 10%"
    XF86MonBrightnessDown

# Locking screensaver (Mod+Shift + "l")
"/usr/bin/xscreensaver-command -lock"
    m:0x41 + c:46
